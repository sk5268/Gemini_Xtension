{
  "manifest_version": 3,
  "name": "Youtube Video Summarizer",
  "version": "1.7",
  "description": "Summarize Youtube video using Google Gemini",
  "permissions": [
    "tabs",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_title": "Summarize Youtube Video",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
